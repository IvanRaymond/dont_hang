<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="{{ asset('fonts/KG-Indie-Flower/stylesheet.css') }}" rel="stylesheet">
        <link href="{{ asset('css/main.css') }}" rel="stylesheet">
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
        <link rel="manifest" href="/site.webmanifest">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
      <nav class="border lined thick" id="navbar">
          <div class="navbar-left">
              <a href="/">
                  <img src="{{ asset('logo.png') }}" alt="Logo">
              </a>
          </div>
          <div class="navbar-right">
              {# {% if not is_logged_in %} #}
                  {# <a class="nav-link border lined thick" href="/login">CONNEXION</a>
                  <a class="nav-link border lined thick" href="/register">S'ENREGISTRER</a> #}
              {# {% else %} #}
                  <div class="user-icon" onclick="openMenu();">
                    <img src="{{ asset('/assets/users/king.png')}}" alt="User icon" />
                    {# {% if username.icon is defined %}
                      <img src="{{ asset('/assets/users/' ~ username.icon) }}" />
                    {% else %}
                        <img src="{{ asset('/assets/users/default-icon.png') }}" />
                    {% endif %} #}
                  </div>

                  <div class="menu border lined thick">
                    <ul>
                      <li><a href="/account">Compte</a></li>
                      <li><a href="/logout">DÃ©connexion</a></li>
                    </ul>
                  </div>

                  <script>
                    function openMenu() {
                      const menu = document.querySelector(".menu");
                      menu.classList.toggle("active");
                    }
                  </script>

              {# {% endif %} #}
          </div>
      </nav>
      <div id="content">
        {% block body %}{% endblock %}
      </div>

        <footer class="border lined thick" id="bottombar">
             &copy; {{ "now"|date("Y") }}
        </footer>
    </body>
</html>
